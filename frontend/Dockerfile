# ---- Build stage ----
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build     

# ---- Runtime stage (Nginx) ----
FROM nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html


# Replace default server to add a proxy to backend
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]